# Depends on: atkmm pangomm gtk3 gtk2


packager="sipo"
contributors=""
maintainer="sipo"


description="C++ bindings for GTK"
url="http://www.gtkmm.org/"


name=gtkmm
version=2.24.5
release=1


source=(https://ftp.gnome.org/pub/GNOME/sources/$name/2.24/$name-$version.tar.xz)


build() {
cd gtkmm-$version
./configure --prefix=/usr
make
}

package() {
cd gtkmm-$version
make DESTDIR=$PKG install
}

