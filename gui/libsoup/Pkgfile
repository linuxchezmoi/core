# Depends on: glib2 libxml2 glib-networking sqlite krb5 libpsl gobject-introspection python vala git gtk-doc meson ninja


run=(glib-networking)


packager="sipo"
contributors=""
maintainer="sipo"


description="HTTP client/server library for GNOME"
url="https://wiki.gnome.org/Projects/libsoup"


name=libsoup
version=2.66.2
release=1


source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)


prepare(){
  cd $name-$version
  mkdir build
}

build() {
  cd $name-$version/build
  meson --prefix=/usr -Dvapi=true
  ninja
}

package() {
  cd $name-$version
  DESTDIR="$PKG" meson install -C build
}
