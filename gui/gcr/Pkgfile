# Depends on: glib2 libgcrypt p11-kit libtasn1 gtk3 gnupg gobject-introspection libxslt vala


packager="sipo"
contributors=""
maintainer="sipo"


description="A library for bits of crypto UI and parsing"
url="https://gitlab.gnome.org/GNOME/gcr"


name=gcr
version=3.28.1
release=1


source=(10-gcr.conf)


prepare(){
  git clone https://gitlab.gnome.org/GNOME/gcr.git
  cd $name

  sed -i '1s/python$/&2/' build/tap-{driver,gtester}
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $name
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib \
    --disable-gtk-doc \
    --disable-static \
    --disable-update-mime \
    --disable-schemas-compile
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}


package() {
  cd $name
  make DESTDIR="$PKG" install
  install -Dt "$PKG/etc/security/limits.d" -m644 ../10-gcr.conf
}

