# Depends on: gst-plugins-base libdvdread libdvdnav llvm soundtouch


packager="sipo"
contributors=""
maintainer="sipo"


description="GStreamer Multimedia Framework Bad Plugins"
url="https://gstreamer.freedesktop.org/"


name=gst-plugins-bad
version=1.14.4
release=1


source=(https://gstreamer.freedesktop.org/src/gst-plugins-bad/$name-$version.tar.xz
		Remove-MODE_2_1.patch
		fix-compatibility-with-libfdk-aac-2.0.0.patch)


prepare(){
cd $name-$version
patch -Np1 -i $SRC/Remove-MODE_2_1.patch
patch -Np1 -i $SRC/fix-compatibility-with-libfdk-aac-2.0.0.patch
}

build() {
cd $name-$version
./configure --prefix=/usr     \
	        --disable-wayland \
	        --disable-opencv  \
		    --disable-nls     \
		    --with-package-name="GStreamer Bad Plugins $version (Yaolinux)"
sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
make
}


package() {
  cd $name-$version
  make DESTDIR="$PKG" install
}
