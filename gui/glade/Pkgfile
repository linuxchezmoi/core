# Depends on: gtk3 libxml2 intltool gtk-doc gobject-introspection python-gobject itstool docbook-xsl git gnome-common


packager="sipo"
contributors=""
maintainer="sipo"


description="User Interface Builder for GTK+ applications"
url="https://glade.gnome.org/"


name=glade
version=3.22.1
release=1


source=()


prepare(){
git clone https://gitlab.gnome.org/GNOME/glade.git
cd $name
NOCONFIGURE=1 ./autogen.sh
}

build() {
cd $name
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
--disable-static --enable-gtk-doc
sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
make
}

package() {
cd $name
make DESTDIR="$PKG" install
}
