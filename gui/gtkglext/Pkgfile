# Depends on: gtk2 glu libxmu pangox-compat python


packager="sipo"
contributors=""
maintainer="sipo"


description="opengl extensions for gtk2"
url="http://gtkglext.sourceforge.net/"


name=gtkglext
version=1.2.0
release=1


source=(https://downloads.sourceforge.net/sourceforge/gtkglext/gtkglext-$version.tar.bz2 
		gtk2.20.patch 
		gtkglext-gcc8.patch)


prepare(){
  cd $name-$version
  patch -Np1 -i "${SRC}/gtk2.20.patch"
  sed '/AC_PATH_XTRA/d' -i configure.in  
  patch -p1 -i ../gtkglext-gcc8.patch
  autoreconf -vi
}
  

build() {
  cd ${name}-${version}
  ./configure --prefix=/usr \
              --disable-static
  make
}


package() {
  cd ${name}-${version}
  make DESTDIR="${PKG}" install
}
