# Depends on: glib2 gnutls gsettings-desktop-schemas meson git ninja openssl


packager="sipo"
contributors=""
maintainer="sipo"


run=(gsettings-desktop-schemas)


description="Network extensions for GLib"
url="https://gitlab.gnome.org/GNOME/glib-networking"


name=glib-networking
version=2.60.1+2+g1ce6b40
release=1


source=(http://ftp.gnome.org/pub/gnome/sources/glib-networking/2.60/glib-networking-2.60.1.tar.xz)


prepare(){
cd $name-2.60.1
mkdir build
}


build() {
cd $name-2.60.1/build
meson --prefix=/usr          \
      -Dlibproxy=disabled .. &&
ninja
}


package() {
cd $name-2.60.1
DESTDIR="$PKG" meson install -C build
}

