# Depends on: at-spi2-core libx11 libxml2 atk git meson ninja


packager="sipo"
contributors=""
maintainer="sipo"


description="A GTK+ module that bridges ATK to D-Bus at-spi"
url="https://wiki.gnome.org/Accessibility"


name=at-spi2-atk
version=2.32.0-git
release=1


source=()


prepare(){
  git clone https://gitlab.gnome.org/GNOME/at-spi2-atk.git
  cd $name
  mkdir build
}

build() {
  cd $name/build
  meson --prefix=/usr
  ninja
}


package() {
  cd $name
  DESTDIR="$PKG" meson install -C build
}

