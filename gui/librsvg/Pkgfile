# Depends on: gdk-pixbuf2 pango libcroco git rust vala


packager="sipo"
contributors=""
maintainer="sipo"


description="SVG rendering library"
url="https://wiki.gnome.org/Projects/LibRsvg"


name=librsvg
version=2.44.13
release=1


source=(http://ftp.gnome.org/pub/gnome/sources/librsvg/2.44/librsvg-$version.tar.xz)


build() {
  cd librsvg-$version
  ./configure --prefix=/usr --disable-static --enable-vala
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0 /g' libtool
  make
}


package() {
  cd librsvg-$version
  make DESTDIR="$PKG" install
}

