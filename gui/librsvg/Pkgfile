# Depends on: gdk-pixbuf2 pango libcroco gobject-introspection vala git rust


packager="sipo"
contributors=""
maintainer="sipo"


description="SVG rendering library"
url="https://wiki.gnome.org/Projects/LibRsvg"


name=librsvg
version=2.44.13
release=1


source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)



build() {
  cd $name-$version
  ./configure --prefix=/usr --disable-static --enable-vala 
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0 /g' libtool
  make
}


package() {
  cd $name-$version
  make DESTDIR="$PKG" install
}

