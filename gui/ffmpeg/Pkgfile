# Depends on: libass fdk-aac freetype lame gnutls libtheora libvorbis libvpx opus x264 x265 alsa-lib libva libvdpau sdl2 yasm git


packager="sipo"
contributors=""
maintainer="sipo"


description="Complete solution to record, convert and stream audio and video"
url="https://ffmpeg.org/"


name=ffmpeg
version=4.1.3
release=2


source=()


build(){
  git clone https://git.ffmpeg.org/ffmpeg.git
  cd ffmpeg

	./configure --prefix=/usr        \
	            --enable-gpl         \
		        --enable-gnutls      \
	            --enable-version3    \
	            --enable-nonfree     \
	            --disable-static     \
	            --enable-shared      \
	            --disable-debug      \
	            --enable-libass      \
	            --enable-libfdk-aac  \
	            --enable-libfreetype \
	            --enable-libmp3lame  \
	            --enable-libopus     \
	            --enable-libtheora   \
	            --enable-libvorbis   \
	            --enable-libvpx      \
	            --enable-libx264     \
	            --enable-libx265

  make
  make tools/qt-faststart
}


package() {
  make DESTDIR="${PKG}" -C ffmpeg install install-man
  install -Dm 755 ffmpeg/tools/qt-faststart "${PKG}"/usr/bin/
}

