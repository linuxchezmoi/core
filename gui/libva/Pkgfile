# Depends on: libdrm libx11 libxext libxfixes wayland git libglvnd meson ninja


packager="sipo"
contributors=""
maintainer="sipo"


description="Video Acceleration (VA) API for Linux"
url="https://01.org/linuxmedia/vaapi"


name=libva
version=2.4.1
release=1


source=()


build(){
git clone https://github.com/intel/libva.git
CFLAGS+=" -DENABLE_VA_MESSAGING"
meson --prefix=/usr libva build
ninja -C build
}
        
package() {
DESTDIR="${PKG}" meson install -C build
install -Dm 644 libva/COPYING -t "${PKG}"/usr/share/licenses/libva
            
install -Dm 644 /dev/stdin "${PKG}"/etc/libva.conf <<END
LIBVA_MESSAGING_LEVEL=1
END
}

