# Depends on: dbus glib2 libxtst intltool gobject-introspection git meson ninja


packager="sipo"
contributors=""
maintainer="sipo"


description="Protocol definitions and daemon for D-Bus at-spi"
url="https://gitlab.gnome.org/GNOME/at-spi2-core"


name=at-spi2-core
version=2.32.0-git
release=1


source=()


prepare(){
  git clone https://gitlab.gnome.org/GNOME/at-spi2-core.git
  cd $name
  mkdir build
}


build() {
  cd $name/build
  meson --prefix=/usr --sysconfdir=/etc \
  -D docs=false
  ninja 
}


package() {
  cd $name
  DESTDIR="$PKG" meson install -C build
}

