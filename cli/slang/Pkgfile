# Depends on: pcre 


packager="sipo"
contributors=""
maintainer="sipo"


description="S-Lang is a powerful interpreted language"
url="https://www.jedsoft.org/slang/"


name=slang
version=2.3.2
release=1


source=(https://www.jedsoft.org/releases/slang/slang-2.3.2.tar.bz2)


build(){
  cd ${name}-${version}
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}


package() {
  cd ${name}-${version}
  make DESTDIR="${PKG}" install-all
}
