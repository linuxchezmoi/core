# Depends on: libffi python2 cmake ninja libxml2 libedit 


packager="sipo"
contributors=""
maintainer="sipo"


description="Low Level Virtual Machine, collection of modular and reusable compiler and toolchain."
url="http://llvm.org/"


name=llvm
version=8.0.0
release=1


source=(${url}releases/$version/$name-$version.src.tar.xz
		${url}releases/$version/cfe-$version.src.tar.xz
		${url}releases/$version/compiler-rt-$version.src.tar.xz)

build() {

	cd $name-$version.src

	mv ../compiler-rt-${version}.src projects/compiler-rt
	mv ../cfe-$version.src tools/clang

	mkdir build
	cd build

	CC=gcc CXX=g++ \
	cmake -DCMAKE_INSTALL_PREFIX=/usr  \
		  -DLLVM_ENABLE_FFI=ON       \
	      -DCMAKE_BUILD_TYPE=Release \
	      -DLLVM_BUILD_LLVM_DYLIB=ON \
	      -DLLVM_LINK_LLVM_DYLIB=ON  \
	      -DLLVM_TARGETS_TO_BUILD="host;AMDGPU;BPF" \
	      -DLLVM_ENABLE_RTTI=ON \
          -DLLVM_ENABLE_EH=ON \
          -DLLVM_ENABLE_LIBXML2=ON \
          -DLLVM_ENABLE_LIBEDIT=ON \
          -Wno-dev -G Ninja ..

	ninja

}

package() {

	cd $name-$version.src/build
	DESTDIR=$PKG ninja install

}
