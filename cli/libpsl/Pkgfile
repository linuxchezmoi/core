# Depends on: python2 libidn libunistring


packager="sipo"
contributors=""
maintainer="sipo"


description="Public Suffix List library"
url="https://github.com/rockdaboot/libpsl"


name=libpsl
version=0.20.2
release=1


source=(https://github.com/rockdaboot/libpsl/releases/download/$name-$version/$name-$version.tar.gz)


prepare(){
  cd ${name}-${version}
  rm -frv list
  autoreconf -fiv
}

build() {
  cd ${name}-${version}
  ./configure --prefix=/usr --disable-static
}


package() {
  cd ${name}-${version}
  make DESTDIR="${PKG}" install
  install -Dm 644 COPYING -t "${PKG}/usr/share/licenses/${name}"
# Obsolet libs
  rm $PKG/usr/lib/libpsl.la
}

