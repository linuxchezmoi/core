# Depends on: expat zlib boost git autoconf-archive


packager="sipo"
contributors=""
maintainer="sipo"


description="A library to parse XMP metadata"
url="https://libopenraw.freedesktop.org/wiki/Exempi"


name=exempi
version=2.5.0
release=1


source=()


prepare(){
  git clone https://anongit.freedesktop.org/git/exempi
  cd $name
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $name
  ./configure --prefix=/usr # --disable-static
  make
}


package() {
  cd $name
  make DESTDIR="$PKG" install
}
