# Depends on: ninja meson glib2 pcre gobject-introspection git ninja gtk-doc


packager="sipo"
contributors="Pierre B, Tnut"
maintainer="sipo"


description="Interface definitions of accessibility infrastructure"
url="https://gitlab.gnome.org/GNOME/atk"


name=atk
version=2.32
release=2


source=()


prepare(){
  git clone https://gitlab.gnome.org/GNOME/atk.git
}

build() {

  meson $name build --prefix=/usr -D docs=true
  ninja -C build

}

package() {

  DESTDIR="$PKG" meson install -C build

}
