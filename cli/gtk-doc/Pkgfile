# Depends on: docbook-xml docbook-xsl itstool libxslt python2-six git meson ninja glib2


packager="sipo"
contributors="Tnut"
maintainer="sipo"


run=(python2-six)


name=gtk-doc
version=1.30+1+g44c5972
release=1


source=()


prepare(){
  git clone https://gitlab.gnome.org/GNOME/gtk-doc
  cd $name
}

build() {
  meson $name build --prefix=/usr
  ninja -C build
}


package() {
  DESTDIR="$PKG" meson install -C build
}
