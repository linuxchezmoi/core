# Depends on: glibc


packager="sipo"
contributors=""
maintainer="sipo"


description="DSP library derived from Speex"
url="https://www.speex.org/"


name=speexdsp
version=1.2rc3
release=1


source=(https://downloads.us.xiph.org/releases/speex/$name-$version.tar.gz 
		speexdsp-fixbuilds-774c87d.patch)


prepare(){
  cd $name-$version
  patch -Np1 -i ../speexdsp-fixbuilds-774c87d.patch
  autoreconf -vi
}

build() {
  cd $name-$version
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
  make
}


package() {
  cd $name-$version
  make DESTDIR="$PKG" install
  install -Dt "$PKG/usr/share/licenses/$name" -m644 COPYING 
}
